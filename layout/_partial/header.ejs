<header class="header">
	<div class="title">
		<a href="<%= url_for() %>" class="logo"><%= config.title %></a>
		<span>by <%= config.author %></span>
	</div>
	<nav class="navbar">
		<ul class="menu">
			<% for (name in theme.menu) { %>
			<li class="menu-item">
				<a href="<%- url_for(theme.menu[name]) %>" class="menu-item-link"><%= name %></a>
			</li>
			<% } %> <% if (is_home()) { %>
			<li class="menu-item"><%- partial('_partial/search') %></li>
			<% } %>
		</ul>
	</nav>
</header>
