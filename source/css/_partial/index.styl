.home-container {
    display: flex;
    overflow: hidden;
}

.sidebar {
    margin: 10px;
    width: 200px;
    overflow: hidden;

    img.avatar {
        display: block;
        width: 100px;
        border-radius: 50%;
        margin: 0 auto 10px;
    }

    .notice {
        border: 1px solid #dbdbde;

        h3 {
            padding: 5px 0;
            margin: 0;
            text-align: center;
            height: 18px;
            line-height: 18px;
            font-size: 1rem;
            background: #dbdbde;
        }

        p {
            margin: 8px;
            font-size: 0.75rem;

            a {
                text-decoration: none;
                color: #368ccb;
            }
        }
    }

    @media screen and (max-width: 768px) {
        display: none;
    }
}

.index-container {
    overflow: auto;
    padding: 0 10px;
    box-shadow: 0 0 2px #ddd;

    .post {
        max-width: 1700px;
        margin: 1rem auto;
        padding: 1rem;
        background-color: #fff;
        border: 1px solid #ddd;
        box-shadow: 0 0 2px #ddd;

        .post-title {
            font-size: 1.4rem;

            .post-title-link {
                color: #368CCB;
                text-decoration: none;
            }
        }

        .post-content {
            overflow: hidden;
            min-height: 1rem;

            a {
                color: #368CCB;
                text-decoration: none;
            }

            img {
                display: block;
                width: 100%;
            }
        }

        .post-meta {
            color: #BABABA;
        }
    }
}