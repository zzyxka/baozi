.home-container {
    display: flex;
    overflow: hidden;
}

.index-container {
    animation: fadeIn 0.5s ease-in-out;
    flex: 1;
    overflow: auto;
    padding: 0 10px;

    .post {
        max-width: 1700px;
        width: 90%;
        margin: 1rem auto;
        padding: 1rem;
        border-bottom: 1px solid #f1f1f4;

        .post-title {
            font-size: 1.8rem;

            .post-title-link {
                letter-spacing: -0.04em;
                font-weight: 700;
                line-height: 1.45em;
                color: #4a4a4a;
                text-decoration: none;
            }
        }

        .post-content {
            overflow: hidden;
            min-height: 1rem;

            a {
                color: #368CCB;
                text-decoration: none;
            }

            img {
                display: block;
                width: 100%;
            }
        }

        .post-meta {
            color: #BABABA;

            .post-read-more-link {
                color: #368CCB;
                text-decoration: none;
            }
        }
    }

    .post.post-list-item:last-of-type {
        border: none;
    }
}
