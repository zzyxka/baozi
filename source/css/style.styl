html {
    font-size: 14px;
}

body {
    margin: 0;
    padding: 0;
    height: 100vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}

p, code, pre {
    word-break: break-all;
}

ul {
    padding: 0 0 0 1.25rem;
}

ol {
    padding: 0 0 0 2rem;
}

blockquote {
    margin: 10px 0;
    padding: 5px 10px;
    background-color: #f2f2f2;
}

code {
    color: #ffad00;
    border: 1px solid;
    padding: 1px 4px;
    border-radius: 4px;
}

@import '_partial/header';
@import '_partial/index';
@import '_partial/post';
@import '_partial/footer';
@import '_partial/top';